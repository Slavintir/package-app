{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "index.js",
        "index.d.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}