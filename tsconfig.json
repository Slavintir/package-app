{
    "compileOnSave": true,
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "strict": true,
        "paths": {
            "@interfaces/*": [
                "src/interfaces/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@constants": [
                "src/constants.ts"
            ],
            "@schemas/*": [
                "src/schemas/*"
            ],
            "@errors/*": [
                "src/errors/*"
            ],
            "@decorators/*": [
                "src/decorators/*"
            ],
            "@transports/*": [
                "src/transports/*"
            ],
            "@config/*": [
                "src/env/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}